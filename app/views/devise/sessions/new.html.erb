<div style="width: 100%;">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="d-flex align-items-center mb-3 pb-1">
      <i class="bi bi-currency-exchange me-3" style="color: #003A70; font-size: 32px;"></i>
      <span class="h1 fw-bold mb-0">Welcome</span>
    </div>
    <h5 class="fw-normal mb-2 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>
    <div class="form-outline mb-3">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg' %>
    </div>
    <div class="form-outline mb-3">
      <%= f.label :password, class: 'form-label' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control form-control-lg' %>
    </div>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="pt-1 mb-3">
      <%= f.submit "Log in", class: 'btn btn-dark btn-lg btn-block', method: :get %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
